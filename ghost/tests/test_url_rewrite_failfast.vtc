varnishtest "URL rewrite filter - fail fast version"

# Backend that checks what URL it receives
server s1 {
    # Set a timeout so we fail fast if request never arrives
    timeout 3

    rxreq
    # Check if we got the rewritten URL
    expect req.url == "/api/v2/users"
    txresp -body "OK"
} -start

# Write config
shell {
    cat > ${tmpdir}/ghost.json <<EOF
{
    "version": 2,
    "vhosts": {
        "test.example.com": {
            "routes": [
                {
                    "path_match": {
                        "type": "PathPrefix",
                        "value": "/api/v1"
                    },
                    "backends": [
                        {"address": "${s1_addr}", "port": ${s1_port}, "weight": 100}
                    ],
                    "filters": {
                        "url_rewrite": {
                            "path_type": "ReplacePrefixMatch",
                            "replace_prefix_match": "/api/v2"
                        }
                    },
                    "priority": 100
                }
            ]
        }
    }
}
EOF
}

varnish v1 -arg "-p thread_pool_stack=160k" -vcl {
    import ghost from "${vmod}";
    import std;

    backend dummy none;

    sub vcl_init {
        ghost.init("${tmpdir}/ghost.json");
        new router = ghost.ghost_backend();
    }

    sub vcl_recv {
        if (req.url == "/.varnish-ghost/reload") {
            if (router.reload()) {
                return (synth(200, "OK"));
            } else {
                return (synth(500, "Reload failed"));
            }
        }
    }

    sub vcl_backend_fetch {
        set bereq.backend = router.backend();
        # Log before and after for debugging
        std.log("bereq.url=" + bereq.url);
    }
} -start

# Initial reload
client c_reload {
    timeout 3
    txreq -url "/.varnish-ghost/reload"
    rxresp
    expect resp.status == 200
} -run

# Test: send request - backend will check URL
client c1 {
    timeout 3
    txreq -url "/api/v1/users" -hdr "Host: test.example.com"
    rxresp
    expect resp.status == 200
} -run
