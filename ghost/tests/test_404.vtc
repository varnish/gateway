varnishtest "ghost 404 for undefined vhost"

# Backend server for api.example.com
server s1 {
    rxreq
    expect req.http.host == "api.example.com"
    txresp -body "backend-api"
} -start

# Write config file with NO default backend
shell {
    cat > ${tmpdir}/ghost.json <<EOF
{
    "version": 2,
    "vhosts": {
        "api.example.com": {
            "routes": [
                {
                    "backends": [
                        {"address": "${s1_addr}", "port": ${s1_port}, "weight": 100}
                    ],
                    "priority": 100
                }
            ]
        }
    }
}
EOF
}

varnish v1 -vcl {
    import ghost from "${vmod}";

    backend dummy none;

    sub vcl_init {
        ghost.init("${tmpdir}/ghost.json");
        new router = ghost.ghost_backend();
    }

    sub vcl_recv {
        # Intercept reload requests and bypass cache
        if (req.url == "/.varnish-ghost/reload") {
            return (pass);
        }
    }

    sub vcl_backend_fetch {
        set bereq.backend = router.backend();
    }
} -start

# Test 1: Known vhost should work
client c1 {
    txreq -hdr "Host: api.example.com"
    rxresp
    expect resp.status == 200
    expect resp.body == "backend-api"
} -run

# Test 2: Unknown vhost should return 404 with JSON
client c2 {
    txreq -hdr "Host: unknown.example.com"
    rxresp
    expect resp.status == 404
    expect resp.http.Content-Type == "application/json"
    expect resp.body == "{\"error\": \"vhost not found\"}"
} -run
